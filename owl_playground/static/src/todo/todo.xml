<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="owl_playground.todo" owl="1">
        <p>Hola</p>
        <div>
            <ul>
                <t t-foreach="props.todos" t-as="todo" t-key="todo.id">
                    <li>
                        <p t-att-class="{'text-muted text-decoration-line-through': props.todo.done}">
                            <span><t t-esc="todo.id" /></span>
                            <span><t t-esc="todo.description" /></span>
                            <!-- <span><t t-esc="todo.done" /></span> -->
                        </p>
                    </li>
                </t>
            </ul>
        </div>
    </t>
</templates>